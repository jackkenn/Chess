package bots;

import game.GameLoop;

public class Rando extends AI {
	
	public Rando(GameLoop game, boolean isWhite) {
		super(game, isWhite);
	}
	
	public void move() {
		if(self.turn) {
			boolean flag = game.move(self.legalMoves.get(rand.nextInt(self.legalMoves.size() - 1)));
		} else {
			return true;
		}
	}

}
