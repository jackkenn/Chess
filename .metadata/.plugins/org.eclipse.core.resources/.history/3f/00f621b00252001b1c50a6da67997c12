package bots;

import java.util.Random;

import game.Board;
import game.GameLoop;
import game.Player;

public abstract class AI {
	public GameLoop game;
	private Board board;
	private Player self;
	private Player opp;
	private Random rand;
	
	public AI(GameLoop game, boolean isWhite) {
		this.game = game;
		this.board = game.getBoard();
		if(isWhite) {
			self = board.white;
		} else {
			self = board.black;
		}
		opp = self.opponent;
		rand = new Random(System.nanoTime());
	}
	
	public abstract boolean move();

}
