package board;

import java.util.ArrayList;

public class Board {
	public ArrayList<ArrayList<Spot>> grid;
	
	public Board() {
		grid = new ArrayList<ArrayList<Spot>>();
		genGrid(8, 8);
	}
	
	private void genGrid(int rows, int columns) {
		for(int i=0; i<rows; i++) {
			grid.add(new ArrayList<Spot>());
			for(int j=0; j<columns; j++) {
				grid.get(i).add(new Spot(new String((char)(i+65)+Integer.toString(j+1)), new Empty(this)));
			}
		}
	}
	
	public Piece getPiece(String s) {
		return grid.get((int)s.toCharArray()[0]-65).get((int)s.toCharArray()[1]-48).getPiece();
	}
	
	public Piece getPiece(int row, int columns) {
		return grid.get(row).get(columns).getPiece();
	}

}
