package bots;

import game.Board;
import game.GameLoop;
import game.Player;

public class Random {
	public GameLoop game;
	private Board board;
	private Player self;
	private Player opp;
	private Random rand;
	
	public Random(GameLoop game, boolean isWhite) {
		this.game = game;
		this.board = game.getBoard();
		if(isWhite) {
			self = board.white;
		} else {
			self = board.black;
		}
		opp = self.opponent;
		rand = new Random();
	}
	
	public boolean move() {
		
		return false;
	}

}
