public class UltraInstictStockFish extends AI {
	private final int pawnValue = 1;
	private final int rookValue = 5;
	private final int knightValue = 3;
	private final int bishopValue = 3;
	private final int queenValue = 9;
	
	private final int pieceWeight;
	private final int spotWeight;
	private final int pinningWeight;
	private final int protectWeight;
