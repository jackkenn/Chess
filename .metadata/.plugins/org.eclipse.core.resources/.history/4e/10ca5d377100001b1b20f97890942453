package board;

import java.util.ArrayList;

public class Spot {
	public String id;
	public Piece piece;
	public int row, column;
	
	public Spot() {
		
	}
	
	public void init(int givenRow, int givenColumn, Piece GivenPiece) {
		row = givenRow;
		column = givenColumn;
		id = new String((char)(row+65)+Integer.toString(column+1));
		piece = GivenPiece;
	}
}
