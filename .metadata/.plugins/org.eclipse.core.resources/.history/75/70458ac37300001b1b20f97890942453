package board;

import java.util.ArrayList;

public abstract class Piece implements Cloneable{
	private Player player;
	private Spot spot;
	private Board board;
	private ArrayList<ArrayList<Integer>> moves;
	private Cord cord;
	
	public Piece(Player givenPlayer, Spot givenSpot, Board givenBoard) {
		player = givenPlayer;
		spot = givenSpot;
		board = givenBoard;
		cord = new Cord (spot.cord.row, spot.cord.column);
	}
	
	public Piece(Piece oldPiece) {
		player = oldPiece.getPlayer();
	}
	
	@Override
	public Piece clone() throws CloneNotSupportedException{
		Piece piece = null;
		piece = (Piece) super.clone();
		return piece;
	}
	
	public void swap(Piece prev, Piece next) throws CloneNotSupportedException {
		Piece temp = prev.clone();
		prev = next;
		next = temp;
	}
	
	public Player getPlayer() {
		return player;
	}
	
	public abstract PieceType getType();
	public abstract String toString();
	public abstract void move(int row, int column);
	public abstract String[] getMovesList();
	public abstract ArrayList<ArrayList<Integer>> getMoves();

}
