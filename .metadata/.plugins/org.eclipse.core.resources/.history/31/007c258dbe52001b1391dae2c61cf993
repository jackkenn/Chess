	private int valueOfBoard(Player player) {
		int matValue = 0;
		int posValue = 0;
		for(Piece p : player.pieces) {
			if(p.getType()==Board.PieceType.KING) {
				matValue += pawnValue;
			}
			
			
		}
		return -1;
	}

