package bots;

import java.util.Random;

import game.Board;
import game.GameLoop;
import game.Player;

public class Rando extends AI {
	
	public Rando(GameLoop game, boolean isWhite) {
		super(game, isWhite);
	}
	
	public boolean move() {
		return game.move(self.legalMoves.get(rand.nextInt(self.legalMoves.size() - 1)));
	}

}
