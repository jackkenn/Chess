package board;

import java.util.ArrayList;

public class Pawn extends Piece{
	
	public Pawn(Player givenPlayer, Spot givenSpot, Board givenBoard) {
		super(givenPlayer, givenSpot, givenBoard);
		// TODO Auto-generated constructor stub
	}

	@Override
	public PieceType getType() {
		// TODO Auto-generated method stub
		return PieceType.PAWN;
	}

	@Override
	public String toString() {
		// TODO Auto-generated method stub
		return new String("P");
	}

	@Override
	public ArrayList<Cord> getMoves() {
		// TODO Auto-generated method stub
		moves.clear();
		for(int i=-1; i<2; i++) {
			try {
				Piece toCheck = board.getPiece(cord.row+i, cord.column+player.DIRECTION);
				if(toCheck.getType()!=PieceType.EMPTY&&toCheck.getType()!=PieceType.BARRIER&&toCheck.player!=player) {
					moves.add(new Cord(cord.row+i, cord.column+player.DIRECTION));
				}
				else if(toCheck.getType()==PieceType.EMPTY&&toCheck.getType()!=PieceType.BARRIER&&i==0) {
					moves.add(new Cord(cord.row+i, cord.column+player.DIRECTION));
				}
			} catch (NullPointerException e) {
				//e.printStackTrace();
			}
		}
		return moves;
	}

}
